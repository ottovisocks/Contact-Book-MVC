@model ContactBook.Core.Models.Person

<form method="post">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden />
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Email)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.PhoneNumber)
        @Html.HiddenFor(m => m.CreationDate)
        <div class="form-group row">
            <h2 class="text-info pl-3">Create Company</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyInfo.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyInfo.Title" class="form-control" />
                        <span asp-validation-for="CompanyInfo.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyInfo.Position"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyInfo.Position" class="form-control" />
                        <span asp-validation-for="CompanyInfo.Position" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyInfo.PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyInfo.PhoneNumber" class="form-control" />
                        <span asp-validation-for="CompanyInfo.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyInfo.Street"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyInfo.Street" class="form-control" />
                        <span asp-validation-for="CompanyInfo.Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyInfo.City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyInfo.City" class="form-control" />
                        <span asp-validation-for="CompanyInfo.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompanyInfo.Country"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompanyInfo.Country" class="form-control" />
                        <span asp-validation-for="CompanyInfo.Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-controller="Contacts" asp-action="GetPerson" asp-route-Id="@Model.Id" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>